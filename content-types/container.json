{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/container.json",
  "title": "Container",
  "description": "A re-usable container for all content types",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "contentTypes": {
      "type": "array",
      "title": "Content Type",
      "description": "Select and order content to display in the container",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/slider.json",
                  "http://slide.json",
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/video.json",
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/text.json",
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/externalBlock.json",
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/splitBlock.json",
                  "http://image.json",
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/cardList.json",
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/banner.json",
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/blogList.json",
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/ugc.json",
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/promoList.json",
                  "https://raw.githubusercontent.com/challerbach/dc-example-website/notebooksbilliger/content-types/nb-banner.json",
                  "http://text-block.html"
                ]
             }
            }
          }
        ]
      }
    }
  }
}
