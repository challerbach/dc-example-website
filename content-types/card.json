{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/card.json",
  "title": "Card",
  "description": "A single card of content",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "title": "Image",
      "description": "Image used in the card",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/image.json"
        }
      ]
    },
    "cardName": {
      "type": "string",
      "title": "Name",
      "description": "Name of the card",
      "validation": "Please enter less than 50 characters",
      "minLength": 0,
      "maxLength": 150
    },
    "propertyName1": {
      "title": "Card name color",
      "description": "Color of the headline",
      "format": "color",
      "type": "string"
    },
    "propertyName2": {
      "title": "Act Beauitiful",
      "description": "Card name font Act Beautiful",
      "type": "boolean"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "Card description",
      "validation": "Please enter less than 50 characters",
      "minLength": 0,
      "maxLength": 200
    },
    "links": {
      "type": "array",
      "title": "Links",
      "description": "Links for the card",
      "items": {
        "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/link.json"
      },
      "minItems": 0,
      "maxItems": 4
    },
    "style": {
      "type": "string",
      "title": "Style",
      "description": "Add classname for CSS styling",
      "validation": "Please enter between 0 and 100 characters",
      "minLength": 0,
      "maxLength": 100
    }
  }
}
