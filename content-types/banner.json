{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/banner.json",
  "title": "Banner",
  "description": "A reusable content type for banner content",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "title": "Meta Data",
      "description": "Meta data related to this content",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/metadata.json"
        }
      ]
    },
    "img": {
      "type": "object",
      "title": "Image",
      "description": "The background image for the banner",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/image.json"
        }
      ]
    },
    "contentImg": {
      "type": "object",
      "title": "Content Image",
      "description": "The image to display with the textual content for this banner",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/willow/content-types/image.json"
        }
      ]
    },
    "header": {
      "title": "Header",
      "description": "Header text for the banner",
      "validation": "Please enter less than 255 characters",
      "allOf":[
        {
           "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
        }
     ],
     "properties":{
        "values":{
           "items":{
              "properties":{
                 "value":{
                    "title": "Header",
                    "description": "Header text for the banner",
                    "type":"string",
                    "minLength":0,
                    "maxLength":255
                 }
              }
           }
        }
     }
    },

    "subheader": {
      "title": "Subheader",
      "description": "Sub header text for the banner",
      "validation": "Please enter less than 255 characters",
      "allOf":[
        {
           "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
        }
     ],
     "properties":{
        "values":{
           "items":{
              "properties":{
                 "value":{
                   "title": "Subheader",
                   "description": "Sub header text for the banner",
                    "type":"string",
                    "minLength":0,
                    "maxLength":255
                 }
              }
           }
        }
     }
    },
    "description": {
      "title": "Description",
      "description": "Description text for the banner",
      "validation": "Please enter less than 2000 characters",
      "allOf":[
        {
           "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
        }
     ],
     "properties":{
        "values":{
           "items":{
              "properties":{
                 "value":{                   
                     "title": "Description",
                     "description": "Description text for the banner",
                    "type":"string",
                    "minLength":0,
                    "maxLength":2000
                 }
              }
           }
        }
     }
    },
    "button": {
      "type": "object",
      "title": "Link / Button",
      "description": "The action link / button for the banner",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/challerbach/dc-example-website/anyafinn/content-types/link.json"
        }
      ],
      "_interpolate": true
    },
    "alignment": {
      "type": "string",
      "title": "Alignment",
      "description": "Alignment of the text content in the banner (left/right). Default is left",
      "enum": [
        "left",
        "right",
        "center"
      ]
    },
    "percH": {
      "title": "Horizontal alignment percentage",
      "description": "A value between -100 and 100 (e.g. 30) Default is 0",
      "type": "number",
      "minimum": -100,
      "maximum": 100
    },
    "percV": {
      "title": "Vertical alignment percentage",
      "description": "A value between -100 and 100 (e.g. 30) Default is 0",
      "type": "number",
      "minimum": -100,
      "maximum": 100
    },
    "style": {
      "type": "string",
      "title": "Style",
      "description": "Add classname for CSS styling",
      "validation": "Please enter between 0 and 100 characters",
      "minLength": 0,
      "maxLength": 100
    },
    "hideBG": {
      "type": "boolean",
      "title": "Hide Background",
      "description": "Enable to have no background behind the banner text. Default is false"
    },
    "stackMobileLayout": {
      "type": "boolean",
      "title": "Stack Mobile Layout",
      "description": "Enable to allow banner text to stack underneath the image on small screens. Default is false"
    },
    "ActBeautiful": {
      "type": "boolean",
      "title": "ActBeautiful font",
      "description": "Enable to have ActBeautiful font in Header"
    },
    "headcolor": {
	"title": "Headline color",
	"description": "Color of the headline",
	"format": "color",
	"type": "string"
	},
    "headsize": {
	"title": "Headline font size in px",
	"description": "Size of the Headline",
	"type": "number",
	"enum": [
                 "12",
                 "24",
                 "36",
		 "48",
		 "60"
                   ]
  },
  "subsize": {
	"title": "Subheader font size in px",
	"description": "Size of the Subtitle",
	"type": "number",
	"enum": [
                 "12",
                 "24",
                 "36",
		 "48",
		 "60"
                   ]
  },
  "descsize": {
	"title": "Description font size in px",
	"description": "Size of the description text",
	"type": "number",
	"enum": [
                 "12",
                 "24",
                 "36",
		 "48",
		 "60"
                   ]
  },	  
  "propertyOrder": [
    "metadata",
    "img",
    "contentImg",
    "header",
    "headcolor",
    "headsize",
    "ActBeautiful",
    "subheader",
    "subsize",
    "description",
    "descsize",	
    "button",
    "alignment",
    "percH",
    "percV",
    "style",
    "stackMobileLayout"
  ]
}
